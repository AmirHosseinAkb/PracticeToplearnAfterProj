@model ChargeWalletViewModel
@{
    ViewData["Title"] = "کیف پول شما";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> کیف پول </li>
        </ul>
    </nav>
</div>
<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <form method="post" enctype="multipart/form-data">
                    <partial name="_SideBar" />
                    <div class="col-md-9">
                        <section class="user-account-content">
                            <header><h1> شارژ کیف پول </h1></header>
                            <div class="inner form-layer">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-cash-dollar"></i></span>
                                            <input asp-for="Amount" type="number" class="form-control" placeholder="مبلغ قابل شارژ به تومان" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> شارژ کیف پول </button>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

