@model ChangePasswordViewModel
@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"> تغییر رمز عبور </li>
        </ul>
    </nav>
</div>
<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <form method="post" enctype="multipart/form-data">
                    <partial name="_SideBar" />
                    <div class="col-md-9">
                        <section class="user-account-content">
                            <header><h1> تغییر رمز عبور </h1></header>
                             @if (ViewBag.IsChanged == true)
                            {
                                <div class="alert alert-success">
                                    رمز عبور شما با موفقیت تغییر یافت
                                </div>
                            }
                            <div class="inner form-layer">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-key"></i></span>
                                            <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="رمز عبور" aria-describedby="username">
                                        </div>
                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                                            <input asp-for="NewPassword"  type="password" class="form-control" placeholder="رمز عبور جدید" aria-describedby="email-address">
                                        </div>
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                                            <input asp-for="ReNewPassword"  type="password" class="form-control" placeholder="تکرار رمز عبور جدید" aria-describedby="email-address">
                                        </div>
                                        <span asp-validation-for="ReNewPassword"  class="text-danger"></span>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> تغییر رمز عبور </button>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

