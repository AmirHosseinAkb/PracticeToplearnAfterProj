@model Tuple<List<CourseComment>,int>
@{
    Layout = null;
}

@foreach (var comment in Model.Item1)
{
    <!-- row -->
    <div class="comment-row">
        <img src="/UserAvatar/@comment.User.AvatarName">
        <div class="left-col">
            <h3> @comment.User.UserName </h3>
            <span>@comment.CreateDate.ToShamsi()</span>
            <p>
                @comment.Comment
            </p>
        </div>
    </div>
}
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (var i = 1; i <= Model.Item2; i++)
        {
            <li class="page-item"><a class="page-link" onclick="ChangePage(@i)">@i</a></li>
        }
    </ul>
</nav>